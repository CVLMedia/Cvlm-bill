<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= appSettings.companyHeader %></title>
    <link rel="manifest" href="/manifest.webmanifest">
    <meta name="theme-color" content="#0B1437">
    <link rel="apple-touch-icon" href="/img/icons/icon-192.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin-mobile-billing.css">
    <!-- Admin Mobile Optimizations -->
    <link href="/css/admin-mobile.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --accent-color: #4895ef;
            --success-color: #4cc9f0;
            --warning-color: #f72585;
            --info-color: #560bad;
            --light-color: #f8f9fa;
            --dark-color: #212529;
            --card-border-radius: 16px;
            --btn-border-radius: 50px;
            --transition-speed: 0.3s;
        }
        
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            color: var(--dark-color);
            line-height: 1.6;
            padding-bottom: 80px;
        }
        
        .mobile-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            padding: 1rem;
            margin-bottom: 1rem;
            border-radius: 0 0 20px 20px;
            box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
        }
        
        .report-card {
            background: white;
            border-radius: 20px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            border: 1px solid rgba(0,0,0,0.05);
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .stat-card {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 1.5rem;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
        }
        
        .stat-card.success {
            background: linear-gradient(135deg, #28a745, #20c997);
        }
        
        .stat-card.warning {
            background: linear-gradient(135deg, #ffc107, #ff8c00);
        }
        
        .stat-card.info {
            background: linear-gradient(135deg, #17a2b8, #138496);
        }
        
        .stat-icon {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            opacity: 0.9;
        }
        
        .stat-value {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.25rem;
        }
        
        .stat-label {
            font-size: 0.9rem;
            opacity: 0.9;
        }
        
        .report-section {
            margin-bottom: 2rem;
        }
        
        .report-section h5 {
            color: var(--primary-color);
            margin-bottom: 1rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .report-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }
        
        .report-item:last-child {
            border-bottom: none;
        }
        
        .report-label {
            font-weight: 500;
            color: var(--dark-color);
        }
        
        .report-value {
            color: #6c757d;
            font-size: 0.9rem;
        }
        
        .action-buttons {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-top: 1.5rem;
        }
        
        .action-btn {
            padding: 0.75rem 1rem;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            text-align: center;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }
        
        .btn-export {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
        }
        
        .btn-export:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(40, 167, 69, 0.4);
            color: white;
        }
        
        .btn-refresh {
            background: linear-gradient(135deg, #17a2b8, #138496);
            color: white;
        }
        
        .btn-refresh:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(23, 162, 184, 0.4);
            color: white;
        }
        
        .btn-back {
            background: linear-gradient(135deg, #6c757d, #495057);
            color: white;
        }
        
        .btn-back:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(108, 117, 125, 0.4);
            color: white;
        }
        
        .chart-container {
            position: relative;
            height: 300px;
            margin: 1rem 0;
        }
        
        @media (max-width: 768px) {
            .mobile-header {
                padding: 1rem;
                margin-bottom: 1rem;
            }
            
            .report-card {
                padding: 1rem;
                margin-bottom: 1rem;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
                gap: 0.75rem;
            }
            
            .stat-card {
                padding: 1rem;
            }
            
            .action-buttons {
                grid-template-columns: 1fr;
                gap: 0.75rem;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../../partials/billing-sidebar') %>
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content py-4">
    <!-- Mobile Header (hidden on desktop) -->
    <div class="mobile-header d-md-none">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h4 class="mb-1">Laporan Billing</h4>
                <p class="mb-0 opacity-75">Statistik dan analisis billing</p>
            </div>
            <div class="text-end">
                <a href="/admin/billing/dashboard" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-arrow-left me-1"></i>Kembali
                </a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="d-none d-md-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2"><i class="bx bx-analytics"></i> Reports</h1>
                </div>
                <!-- Statistics Cards -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <div class="stat-value"><%= stats.totalCustomers %></div>
                        <div class="stat-label">Total Pelanggan</div>
                    </div>
                    <div class="stat-card success">
                        <div class="stat-icon">
                            <i class="bi bi-receipt"></i>
                        </div>
                        <div class="stat-value"><%= stats.totalInvoices %></div>
                        <div class="stat-label">Total Tagihan</div>
                    </div>
                    <div class="stat-card warning">
                        <div class="stat-icon">
                            <i class="bi bi-currency-dollar"></i>
                        </div>
                        <div class="stat-value">Rp <%= stats.totalRevenue.toLocaleString('id-ID') %></div>
                        <div class="stat-label">Total Pendapatan</div>
                    </div>
                    <div class="stat-card info">
                        <div class="stat-icon">
                            <i class="bi bi-clock"></i>
                        </div>
                        <div class="stat-value"><%= stats.pendingPayments %></div>
                        <div class="stat-label">Pembayaran Pending</div>
                    </div>
                </div>

                <!-- Revenue Report -->
                <div class="report-card">
                    <div class="report-section">
                        <h5><i class="bi bi-graph-up"></i>Laporan Pendapatan</h5>
                        <div style="position: relative; height: 300px; margin-bottom: 1.5rem;">
                            <canvas id="revenueChart"></canvas>
                        </div>
                        <div class="report-item">
                            <span class="report-label">Pendapatan Hari Ini</span>
                            <span class="report-value" id="rev-today">Rp 0</span>
                        </div>
                        <div class="report-item">
                            <span class="report-label">Pendapatan Minggu Ini</span>
                            <span class="report-value" id="rev-week">Rp 0</span>
                        </div>
                        <div class="report-item">
                            <span class="report-label">Pendapatan Bulan Ini</span>
                            <span class="report-value" id="rev-month">Rp <%= stats.totalRevenue.toLocaleString('id-ID') %></span>
                        </div>
                    </div>
                </div>

                <!-- Customer Report -->
                <div class="report-card">
                    <div class="report-section">
                        <h5><i class="bi bi-people"></i>Laporan Pelanggan</h5>
                        <div class="report-item">
                            <span class="report-label">Pelanggan Aktif</span>
                            <span class="report-value" id="active-customers"><%= stats.activeCustomers || stats.totalCustomers || 0 %></span>
                        </div>
                        <div class="report-item">
                            <span class="report-label">Pelanggan Baru (Bulan Ini)</span>
                            <span class="report-value" id="new-customers"><%= stats.newCustomersThisMonth || 0 %></span>
                        </div>
                        <div class="report-item">
                            <span class="report-label">Pelanggan Non-Aktif</span>
                            <span class="report-value" id="inactive-customers"><%= stats.inactiveCustomers || 0 %></span>
                        </div>
                        <div class="report-item">
                            <span class="report-label">Tingkat Retensi</span>
                            <span class="report-value" id="retention-rate"><%= stats.retentionRate || 0 %>%</span>
                        </div>
                    </div>
                </div>

                <!-- Invoice Report -->
                <div class="report-card">
                    <div class="report-section">
                        <h5><i class="bi bi-receipt"></i>Laporan Tagihan</h5>
                        <div class="report-item">
                            <span class="report-label">Tagihan Dibuat (Bulan Ini)</span>
                            <span class="report-value" id="invoices-this-month"><%= stats.invoicesThisMonth || 0 %></span>
                        </div>
                        <div class="report-item">
                            <span class="report-label">Tagihan Lunas</span>
                            <span class="report-value" id="paid-invoices"><%= stats.paidInvoices || 0 %></span>
                        </div>
                        <div class="report-item">
                            <span class="report-label">Tagihan Belum Lunas</span>
                            <span class="report-value" id="unpaid-invoices"><%= stats.unpaidInvoices || 0 %></span>
                        </div>
                        <div class="report-item">
                            <span class="report-label">Tingkat Pembayaran</span>
                            <span class="report-value" id="payment-rate"><%= stats.paymentRate || 0 %>%</span>
                        </div>
                    </div>
                </div>

                <!-- Payment Report -->
                <div class="report-card">
                    <div class="report-section">
                        <h5><i class="bi bi-credit-card"></i>Laporan Pembayaran</h5>
                        <div class="report-item">
                            <span class="report-label">Pembayaran Berhasil</span>
                            <span class="report-value" id="successful-payments"><%= stats.successfulPayments || 0 %></span>
                        </div>
                        <div class="report-item">
                            <span class="report-label">Pembayaran Pending</span>
                            <span class="report-value" id="pending-payments"><%= stats.pendingPayments || 0 %></span>
                        </div>
                        <div class="report-item">
                            <span class="report-label">Pembayaran Gagal</span>
                            <span class="report-value" id="failed-payments"><%= stats.failedPayments || 0 %></span>
                        </div>
                        <div class="report-item">
                            <span class="report-label">Rata-rata Waktu Pembayaran</span>
                            <span class="report-value">-</span>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="action-buttons">
                    <button class="action-btn btn-export" onclick="exportReport()">
                        <i class="bi bi-download me-1"></i>Export
                    </button>
                    <button class="action-btn btn-refresh" onclick="refreshReport()">
                        <i class="bi bi-arrow-clockwise me-1"></i>Refresh
                    </button>
                </div>
            </div>
        </div>
    </div>
            </main>
        </div>
    </div>

    <script>
    // Fetch revenue summary from API and populate report values
    (function(){
        fetch('/admin/billing/api/revenue/summary')
            .then(r=>r.json())
            .then(res=>{
                if(res && res.success && res.data){
                    const d = res.data;
                    const fmt = n => 'Rp ' + Number(n||0).toLocaleString('id-ID');
                    const elToday = document.getElementById('rev-today');
                    const elWeek = document.getElementById('rev-week');
                    const elMonth = document.getElementById('rev-month');
                    if(elToday) elToday.textContent = fmt(d.todayRevenue);
                    if(elWeek) elWeek.textContent = fmt(d.weekRevenue);
                    if(elMonth && !<%= !!stats.totalRevenue %>) elMonth.textContent = fmt(d.monthRevenue);
                }
            }).catch(()=>{});
    })();
    </script>
    <!-- Bottom Navigation removed for consistency with admin layout -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="/js/admin-mobile-billing.js"></script>
    <script>
        // Revenue Chart
        let revenueChart = null;
        
        async function loadRevenueChart() {
            try {
                const response = await fetch('/admin/billing/api/reports/revenue-chart');
                const result = await response.json();
                
                if (result.success && result.data) {
                    const chartData = result.data;
                    const ctx = document.getElementById('revenueChart');
                    
                    if (!ctx) return;
                    
                    // Destroy existing chart if any
                    if (revenueChart) {
                        revenueChart.destroy();
                    }
                    
                    // Prepare data
                    const labels = chartData.map(item => item.dateLabel);
                    const revenues = chartData.map(item => item.revenue);
                    
                    // Create chart
                    revenueChart = new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: 'Pendapatan (Rp)',
                                data: revenues,
                                borderColor: 'rgba(67, 97, 238, 1)',
                                backgroundColor: 'rgba(67, 97, 238, 0.1)',
                                borderWidth: 3,
                                fill: true,
                                tension: 0.4,
                                pointRadius: 4,
                                pointBackgroundColor: 'rgba(67, 97, 238, 1)',
                                pointBorderColor: '#fff',
                                pointBorderWidth: 2,
                                pointHoverRadius: 6,
                                pointHoverBackgroundColor: 'rgba(67, 97, 238, 1)',
                                pointHoverBorderColor: '#fff',
                                pointHoverBorderWidth: 2
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    display: true,
                                    position: 'top',
                                    labels: {
                                        font: {
                                            size: 12,
                                            weight: 'bold'
                                        },
                                        color: '#212529',
                                        padding: 15
                                    }
                                },
                                tooltip: {
                                    backgroundColor: 'rgba(0, 0, 0, 0.8)',
                                    padding: 12,
                                    titleFont: {
                                        size: 14,
                                        weight: 'bold'
                                    },
                                    bodyFont: {
                                        size: 13
                                    },
                                    callbacks: {
                                        label: function(context) {
                                            return 'Pendapatan: Rp ' + context.parsed.y.toLocaleString('id-ID');
                                        }
                                    }
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: {
                                        callback: function(value) {
                                            return 'Rp ' + value.toLocaleString('id-ID');
                                        },
                                        font: {
                                            size: 11
                                        },
                                        color: '#6c757d'
                                    },
                                    grid: {
                                        color: 'rgba(0, 0, 0, 0.05)',
                                        drawBorder: false
                                    }
                                },
                                x: {
                                    ticks: {
                                        maxRotation: 45,
                                        minRotation: 45,
                                        font: {
                                            size: 10
                                        },
                                        color: '#6c757d'
                                    },
                                    grid: {
                                        display: false
                                    }
                                }
                            },
                            interaction: {
                                intersect: false,
                                mode: 'index'
                            }
                        }
                    });
                }
            } catch (error) {
                console.error('Error loading revenue chart:', error);
            }
        }
        
        // Load chart on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadRevenueChart();
        });
    </script>
    <script>
        // Report functions
        async function exportReport() {
            // Add haptic feedback
            if (navigator.vibrate) {
                navigator.vibrate(50);
            }
            
            // Show loading state
            const btn = event.target;
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-hourglass-split me-1"></i>Exporting...';
            btn.disabled = true;
            
            try {
                // Create form and submit to POST endpoint
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/admin/billing/api/reports/export';
                
                // Add CSRF token if available
                const csrfToken = document.querySelector('meta[name="csrf-token"]');
                if (csrfToken) {
                    const csrfInput = document.createElement('input');
                    csrfInput.type = 'hidden';
                    csrfInput.name = '_csrf';
                    csrfInput.value = csrfToken.getAttribute('content');
                    form.appendChild(csrfInput);
                }
                
                document.body.appendChild(form);
                form.submit();
                
                // Remove form after submission
                setTimeout(() => {
                    document.body.removeChild(form);
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }, 1000);
            } catch (error) {
                console.error('Error exporting report:', error);
                alert('Gagal mengekspor laporan. Silakan coba lagi.');
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        }
        
        async function refreshReport() {
            // Add haptic feedback
            if (navigator.vibrate) {
                navigator.vibrate(50);
            }
            
            // Show loading state
            const btn = event.target;
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-hourglass-split me-1"></i>Refreshing...';
            btn.disabled = true;
            
            try {
                // Fetch updated stats
                const response = await fetch('/admin/billing/api/reports/stats');
                const result = await response.json();
                
                if (result.success && result.data) {
                    const stats = result.data;
                    
                    // Update all stat values
                    const updateElement = (id, value) => {
                        const el = document.getElementById(id);
                        if (el) el.textContent = value;
                    };
                    
                    updateElement('active-customers', stats.activeCustomers || 0);
                    updateElement('new-customers', stats.newCustomersThisMonth || 0);
                    updateElement('inactive-customers', stats.inactiveCustomers || 0);
                    updateElement('retention-rate', (stats.retentionRate || 0) + '%');
                    updateElement('invoices-this-month', stats.invoicesThisMonth || 0);
                    updateElement('paid-invoices', stats.paidInvoices || 0);
                    updateElement('unpaid-invoices', stats.unpaidInvoices || 0);
                    updateElement('payment-rate', (stats.paymentRate || 0) + '%');
                    updateElement('successful-payments', stats.successfulPayments || 0);
                    updateElement('pending-payments', stats.pendingPayments || 0);
                    updateElement('failed-payments', stats.failedPayments || 0);
                    
                    // Also refresh revenue summary
                    const revResponse = await fetch('/admin/billing/api/revenue/summary');
                    const revResult = await revResponse.json();
                    if (revResult.success && revResult.data) {
                        const fmt = n => 'Rp ' + Number(n||0).toLocaleString('id-ID');
                        const elToday = document.getElementById('rev-today');
                        const elWeek = document.getElementById('rev-week');
                        const elMonth = document.getElementById('rev-month');
                        if (elToday) elToday.textContent = fmt(revResult.data.todayRevenue);
                        if (elWeek) elWeek.textContent = fmt(revResult.data.weekRevenue);
                        if (elMonth) elMonth.textContent = fmt(revResult.data.monthRevenue);
                    }
                    
                    // Refresh chart
                    loadRevenueChart();
                }
                
                btn.innerHTML = originalText;
                btn.disabled = false;
            } catch (error) {
                console.error('Error refreshing report:', error);
                // Fallback to page reload
                window.location.reload();
            }
        }
        
        // Add touch feedback for action buttons
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.action-btn').forEach(btn => {
                btn.addEventListener('touchstart', function() {
                    this.style.transform = 'scale(0.95)';
                });
                
                btn.addEventListener('touchend', function() {
                    this.style.transform = 'scale(1)';
                });
            });
        });
    </script>
</body>
