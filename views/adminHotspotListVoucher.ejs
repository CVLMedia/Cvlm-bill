<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css">
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>
<!-- Script adminHotspotTable.js di-comment karena sudah di-inline di bawah -->
<!-- <script src="/js/adminHotspotTable.js"></script> -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
$(document).ready(function() {
    // Initialize DataTable
    if ($.fn.DataTable.isDataTable('#hotspotTable')) {
        $('#hotspotTable').DataTable().destroy();
    }
    
    const statusPriority = {
        'ONLINE': 4,
        'STAND BY': 3,
        'BARU': 2,
        'EXPIRED': 1
    };

    // Definisikan custom order untuk status voucher
    if ($.fn.dataTable && $.fn.dataTable.ext) {
        $.fn.dataTable.ext.order['status-voucher'] = function(settings, col) {
            return this.api().column(col, { order: 'index' }).nodes().map(function(td) {
                const text = $(td).text().trim();
                return statusPriority[text] !== undefined ? statusPriority[text] : 0;
            });
        };
    }

    let table = $('#hotspotTable').DataTable({
        pageLength: 10,
        lengthMenu: [[10, 25, 50, 100], [10, 25, 50, 100]],
        paging: true,
        pagingType: 'full_numbers',
        stateSave: false,
        scrollX: true,
        scrollCollapse: true,
        autoWidth: false,
        dom: 'lfrtip',
        order: [[5, 'desc'], [1, 'asc']],
        language: {
            url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/id.json',
            paginate: {
                previous: '<i class="bi bi-chevron-left"></i>',
                next: '<i class="bi bi-chevron-right"></i>',
                first: '<<',
                last: '>>'
            },
            info: 'Menampilkan _START_ sampai _END_ dari _TOTAL_ user',
            lengthMenu: 'Tampilkan _MENU_ user',
            search: 'Cari:',
            zeroRecords: 'Tidak ada user ditemukan',
            infoEmpty: 'Menampilkan 0 sampai 0 dari 0 user',
            infoFiltered: '(difilter dari _MAX_ total user)'
        },
        columnDefs: [
            { targets: 0, orderable: false, width: '4%', className: 'text-center align-middle' },
            { targets: 1, width: '4%', className: 'text-center text-nowrap' },
            { targets: 2, width: '12%', className: 'text-nowrap' },
            { targets: 3, width: '10%', className: 'text-nowrap' },
            { targets: 4, width: '10%', className: 'text-nowrap' },
            { targets: 5, orderDataType: 'status-voucher', width: '10%', className: 'text-center text-nowrap' },
            { targets: 6, width: '10%', className: 'text-nowrap' },
            { targets: 7, width: '10%', className: 'text-nowrap' },
            { targets: 8, width: '12%', className: 'text-nowrap' },
            { targets: 9, width: '10%', className: 'text-nowrap' },
            { targets: 10, width: '10%', className: 'text-nowrap' },
            { targets: 11, width: '10%', className: 'text-nowrap' },
            { targets: 12, width: '8%', className: 'text-nowrap text-end' },
            { targets: 13, width: '8%', className: 'text-nowrap text-end' },
            { targets: 14, width: '8%', className: 'text-nowrap text-end' },
            { targets: -1, orderable: false, width: '16%', className: 'text-center text-nowrap' }
        ]
    });

    const statusColumnIndex = 5;

    function extractStatus(cellHtml) {
        return $('<div>').html(cellHtml).text().trim().toLowerCase();
    }

    function updateOnlineCount() {
        let count = 0;
        table.rows({ search: 'applied' }).every(function() {
            const rowData = this.data();
            const statusText = extractStatus(rowData[statusColumnIndex]);
            if (statusText === 'online') count++;
        });
        $('#activeUsers').text(count);
    }

    function refreshSelectionState() {
        const $checkboxes = $('.voucher-select-checkbox:visible');
        const $selected = $checkboxes.filter(':checked');
        const total = $checkboxes.length;
        const selectedCount = $selected.length;
        
        // Update counter
        const selectedCountEl = $('#selectedCount');
        if (selectedCountEl.length) {
            selectedCountEl.text(selectedCount);
        }
        
        // Update tombol delete
        const bulkDeleteBtn = $('#bulkDeleteVoucher');
        if (bulkDeleteBtn.length) {
            bulkDeleteBtn.prop('disabled', selectedCount === 0);
        }

        // Update select all checkbox
        const selectAll = $('#selectAllVouchers').get(0);
        if (selectAll) {
            if (selectedCount === 0) {
                selectAll.checked = false;
                selectAll.indeterminate = false;
            } else if (selectedCount === total && total > 0) {
                selectAll.checked = true;
                selectAll.indeterminate = false;
            } else {
                selectAll.checked = false;
                selectAll.indeterminate = true;
            }
        }
    }

    $.fn.dataTable.ext.search.push(function(settings, data, dataIndex) {
        if (settings.nTable !== table.table().node()) return true;
        const filterValue = $('#voucherCategoryFilter').val() || 'all';
        if (filterValue === 'all') return true;
        const rowNode = table.row(dataIndex).node();
        if (!rowNode) return true;
        const $row = $(rowNode);
        const status = ($row.data('status') || '').toString().toUpperCase(); // Gunakan data-status dari tr
        const voucherStatus = ($row.data('voucher-status') || '').toString().toLowerCase();
        const connectionStatus = ($row.data('connection-status') || '').toString().toLowerCase();
        const startTime = ($row.data('start-time') || '').toString().trim();

        // Filter berdasarkan kategori:
        // BARU (Ungu) - Voucher yang belum digunakan
        // EXPIRED (Merah) - Voucher yang habis uptime/habis masa aktif
        // STAND BY (Kuning) - Voucher yang sudah dipakai tetapi offline dan masih ada masa pakai
        // ONLINE (Hijau) - Voucher yang aktif
        
        if (filterValue === 'stock' || filterValue === 'stok') {
            // Stok Voucher (BARU)
            return status === 'BARU';
        } else if (filterValue === 'sold' || filterValue === 'terjual') {
            // Voucher Terjual (EXPIRED/STAND BY/ONLINE)
            return status === 'ONLINE' || status === 'STAND BY' || status === 'EXPIRED';
        } else if (filterValue === 'online') {
            // Voucher Online (ONLINE)
            return status === 'ONLINE';
        } else if (filterValue === 'baru') {
            // BARU (Ungu) - Voucher yang belum digunakan
            return status === 'BARU';
        } else if (filterValue === 'expired') {
            // EXPIRED (Merah) - Voucher yang habis uptime/habis masa aktif
            return status === 'EXPIRED';
        } else if (filterValue === 'standby') {
            // STAND BY (Kuning) - Voucher yang sudah dipakai tetapi offline dan masih ada masa pakai
            return status === 'STAND BY';
        }
        return true;
    });

    // Filter Voucher Handler - menggunakan event delegation
    $(document).on('change', '#voucherCategoryFilter', function() {
        table.draw();
        refreshSelectionState();
    });

    // Load profiles when router is selected (Add User Modal)
    $('#addRouterId').on('change', function() {
        const routerId = $(this).val();
        const profileSelect = $('#addProfile');
        
        if (!routerId) {
            profileSelect.html('<option value="">Pilih NAS terlebih dahulu</option>');
            return;
        }
        
        profileSelect.html('<option value="">Memuat profile...</option>');
        
        $.get(`/admin/mikrotik/hotspot-profiles/api?router_id=${routerId}`, function(data) {
            if (data.success && data.profiles && data.profiles.length > 0) {
                let options = '<option value="">Pilih Profile</option>';
                data.profiles.forEach(function(profile) {
                    options += `<option value="${profile.name}">${profile.name}</option>`;
                });
                profileSelect.html(options);
            } else {
                profileSelect.html('<option value="">Tidak ada profile tersedia</option>');
            }
        }).fail(function() {
            profileSelect.html('<option value="">Gagal memuat profile</option>');
        });
    });

    // Load profiles when router is selected (Edit User Modal)
    $('#editRouterId').on('change', function() {
        const routerId = $(this).val();
        const profileSelect = $('#editProfile');
        
        if (!routerId) {
            profileSelect.html('<option value="">Pilih NAS terlebih dahulu</option>');
            return;
        }
        
        profileSelect.html('<option value="">Memuat profile...</option>');
        
        $.get(`/admin/mikrotik/hotspot-profiles/api?router_id=${routerId}`, function(data) {
            if (data.success && data.profiles && data.profiles.length > 0) {
                let options = '<option value="">Pilih Profile</option>';
                data.profiles.forEach(function(profile) {
                    options += `<option value="${profile.name}">${profile.name}</option>`;
                });
                profileSelect.html(options);
            } else {
                profileSelect.html('<option value="">Tidak ada profile tersedia</option>');
            }
        }).fail(function() {
            profileSelect.html('<option value="">Gagal memuat profile</option>');
        });
    });

    // Edit user button handler
    $(document).on('click', '.edit-user-btn', function() {
        const username = $(this).data('username');
        const password = $(this).data('password');
        const profile = $(this).data('profile');
        const routerId = $(this).data('router-id');
        
        $('#originalUsername').val(username);
        $('#editUsername').val(username);
        $('#editPassword').val(password);
        $('#editRouterId').val(routerId).trigger('change');
        
        // Wait for profiles to load, then set the profile
        setTimeout(function() {
            $('#editProfile').val(profile);
        }, 500);
        
        $('#editUserModal').modal('show');
    });

    // Delete user button handler
    $(document).on('click', '.delete-user-btn', function() {
        const username = $(this).data('username');
        const routerId = $(this).data('router-id');
        
        if (confirm(`Yakin ingin menghapus user "${username}"?`)) {
            const form = $('<form>', {
                'method': 'POST',
                'action': '/admin/hotspot/delete'
            });
            
            form.append($('<input>', {
                'type': 'hidden',
                'name': 'username',
                'value': username
            }));
            
            if (routerId) {
                form.append($('<input>', {
                    'type': 'hidden',
                    'name': 'router_id',
                    'value': routerId
                }));
            }
            
            $('body').append(form);
            form.submit();
        }
    });

    // Disconnect user button handler
    $(document).on('click', '.disconnect-session-btn', function() {
        const username = $(this).data('username');
        $('#disconnectUsername').text(username);
        
        $('#confirmDisconnect').off('click').on('click', function() {
            $.ajax({
                url: '/admin/hotspot/disconnect-user',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ username: username }),
                success: function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Gagal memutus koneksi: ' + (response.message || 'Unknown error'));
                    }
                },
                error: function() {
                    alert('Terjadi kesalahan saat memutus koneksi');
                }
            });
            
            $('#disconnectUserModal').modal('hide');
        });
        
        $('#disconnectUserModal').modal('show');
    });

    // Select All Checkbox Handler - menggunakan event delegation
    $(document).on('change', '#selectAllVouchers', function() {
        const isChecked = $(this).is(':checked');
        // Pilih semua checkbox yang terlihat (termasuk yang di halaman lain jika ada)
        $('.voucher-select-checkbox').prop('checked', isChecked);
        refreshSelectionState();
    });

    // Individual Checkbox Handler - menggunakan event delegation
    $(document).on('change', '.voucher-select-checkbox', function() {
        refreshSelectionState();
    });

    // Bulk Delete Handler - menggunakan event delegation
    $(document).on('click', '#bulkDeleteVoucher', function() {
        const selected = [];
        $('.voucher-select-checkbox:checked').each(function() {
            selected.push({
                username: $(this).data('username'),
                router_id: $(this).data('router-id') || ''
            });
        });
        if (selected.length === 0) {
            alert('Pilih minimal satu voucher yang akan dihapus.');
            return;
        }
        if (!confirm('Yakin hapus ' + selected.length + ' voucher?')) {
            return;
        }
        $.ajax({
            url: '/admin/hotspot/delete-multiple',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ vouchers: selected }),
            success: function(response) {
                const message = (response && response.message) ? response.message : (selected.length + ' voucher berhasil dihapus.');
                alert(message);
                setTimeout(() => window.location.reload(), 1200);
            },
            error: function(xhr) {
                let msg = 'Gagal menghapus voucher.';
                if (xhr.responseJSON && xhr.responseJSON.message) msg = xhr.responseJSON.message;
                alert(msg);
            }
        });
    });

    $('#hotspotTable_filter input').on('input', function() {
        setTimeout(function() {
            table.order([[statusColumnIndex, 'desc'], [1, 'asc']]).draw();
        }, 120);
    });

    table.on('draw', function() {
        updateOnlineCount();
        refreshSelectionState();
    });

    // Inisialisasi setelah DataTables selesai
    setTimeout(function() {
        updateOnlineCount();
        refreshSelectionState();
        initValidityCountdown();
    }, 300);

    // Fungsi untuk format countdown validity
    function formatValidityCountdown(remainingSeconds) {
        if (remainingSeconds <= 0) {
            return '0d 00:00:00';
        }
        
        const days = Math.floor(remainingSeconds / 86400);
        const hours = Math.floor((remainingSeconds % 86400) / 3600);
        const minutes = Math.floor((remainingSeconds % 3600) / 60);
        const secs = remainingSeconds % 60;
        
        if (days > 0) {
            return `${days}d ${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(secs).padStart(2, '0')}`;
        } else {
            return `0d ${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(secs).padStart(2, '0')}`;
        }
    }

    // Fungsi untuk update countdown validity secara real-time
    function updateValidityCountdown() {
        $('.validity-countdown[data-end-time]').each(function() {
            const $cell = $(this);
            const endTimeStr = $cell.data('end-time');
            
            if (!endTimeStr) return;
            
            const endTime = new Date(endTimeStr);
            const now = new Date();
            const remainingSeconds = Math.floor((endTime.getTime() - now.getTime()) / 1000);
            
            if (remainingSeconds <= 0) {
                $cell.find('.validity-text').text('0d 00:00:00');
                $cell.find('.validity-text').css('color', '#dc3545'); // Merah jika habis
            } else {
                const countdown = formatValidityCountdown(remainingSeconds);
                $cell.find('.validity-text').text(countdown);
                
                // Warna berdasarkan sisa waktu
                if (remainingSeconds < 3600) { // Kurang dari 1 jam
                    $cell.find('.validity-text').css('color', '#dc3545'); // Merah
                } else if (remainingSeconds < 86400) { // Kurang dari 1 hari
                    $cell.find('.validity-text').css('color', '#ffc107'); // Kuning
                } else {
                    $cell.find('.validity-text').css('color', ''); // Default
                }
            }
        });
    }

    // Inisialisasi countdown validity
    function initValidityCountdown() {
        // Update pertama kali
        updateValidityCountdown();
        
        // Update setiap detik
        setInterval(function() {
            updateValidityCountdown();
        }, 1000);
        
        // Update juga saat tabel di-redraw (pagination, filter, dll)
        table.on('draw', function() {
            setTimeout(updateValidityCountdown, 100);
        });
    }

    // Fungsi untuk format uptime (HH:mm:ss)
    function formatUptime(seconds) {
        if (!seconds || seconds < 0) return '00:00:00';
        
        const hours = Math.floor(seconds / 3600);
        const minutes = Math.floor((seconds % 3600) / 60);
        const secs = seconds % 60;
        
        return `${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(secs).padStart(2, '0')}`;
    }

    // Fungsi untuk update uptime secara real-time
    function updateUptimeCountdown() {
        $('.uptime-countdown').each(function() {
            const $cell = $(this);
            const isActive = $cell.data('is-active') === true;
            const startTimeStr = $cell.data('start-time');
            const uptimeUsed = parseInt($cell.data('uptime-used') || 0);
            
            if (isActive && startTimeStr) {
                // Untuk user aktif, hitung uptime real-time dari waktu login
                const startTime = new Date(startTimeStr);
                const now = new Date();
                const currentUptimeSeconds = Math.floor((now.getTime() - startTime.getTime()) / 1000);
                const totalUptimeSeconds = currentUptimeSeconds + uptimeUsed;
                
                const uptimeDisplay = formatUptime(totalUptimeSeconds);
                $cell.find('.uptime-text').text(uptimeDisplay);
            } else if (uptimeUsed > 0) {
                // Untuk user offline, tampilkan uptime yang sudah digunakan (statis)
                const uptimeDisplay = formatUptime(uptimeUsed);
                $cell.find('.uptime-text').text(uptimeDisplay);
            } else {
                // Jika tidak ada data, tampilkan default
                $cell.find('.uptime-text').text('00:00:00');
            }
        });
    }

    // Inisialisasi countdown uptime
    function initUptimeCountdown() {
        // Update pertama kali
        updateUptimeCountdown();
        
        // Update setiap detik
        setInterval(function() {
            updateUptimeCountdown();
        }, 1000);
        
        // Update juga saat tabel di-redraw (pagination, filter, dll)
        table.on('draw', function() {
            setTimeout(updateUptimeCountdown, 100);
        });
    }

    // Inisialisasi setelah DataTables selesai
    setTimeout(function() {
        updateOnlineCount();
        refreshSelectionState();
        initValidityCountdown();
        initUptimeCountdown();
    }, 300);

});
</script>

