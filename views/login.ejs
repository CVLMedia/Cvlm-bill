<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Pelanggan | Portal ISP</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .login-container {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      padding-top: 80px; /* Kompensasi untuk navbar fixed */
    }
    .login-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border: none;
      border-radius: 20px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      max-width: 400px;
      width: 100%;
    }
    .login-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 30px 20px;
      text-align: center;
    }
    .logo-container {
      width: auto;
      height: auto;
      background: none;
      border: none;
      border-radius: 0;
      box-shadow: none;
      margin: 0 auto 15px;
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      animation: fadeInLogo 1s ease 0.2s forwards;
      padding: 0;
    }
    .logo-container img {
      width: auto;
      height: auto;
      max-width: 150px;
      max-height: 150px;
      object-fit: contain;
      box-shadow: 0 8px 32px rgba(102,126,234,0.18);
      transition: transform 0.3s cubic-bezier(.4,2,.6,1), box-shadow 0.3s;
      border-radius: 12px;
      animation: floating 3s ease-in-out infinite;
    }
    .logo-container img:hover {
      transform: scale(1.08) rotate(-2deg);
      box-shadow: 0 16px 40px rgba(102,126,234,0.25);
      animation: none;
    }
    @keyframes fadeInLogo {
      to { opacity: 1; }
    }
    @keyframes floating {
      0% {
        transform: translateY(0px) rotate(0deg);
      }
      50% {
        transform: translateY(-10px) rotate(1deg);
      }
      100% {
        transform: translateY(0px) rotate(0deg);
      }
    }
    .form-container {
      padding: 30px 25px;
    }
    .form-floating {
      margin-bottom: 20px;
    }
    .form-control {
      border: 2px solid #e9ecef;
      border-radius: 12px;
      padding: 15px 20px;
      font-size: 16px;
      transition: all 0.3s ease;
    }
    .form-control:focus {
      border-color: #667eea;
      box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    .btn-login {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border: none;
      border-radius: 12px;
      padding: 15px;
      font-size: 16px;
      font-weight: 600;
      transition: all 0.3s ease;
    }
    .btn-login:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
    }
    .footer-text {
      color: #6c757d;
      font-size: 12px;
      margin-top: 20px;
    }
    @media (max-width: 576px) {
      .login-container {
        padding: 10px;
      }
      .login-card {
        border-radius: 15px;
      }
      .form-container {
        padding: 25px 20px;
      }
      .logo-container img {
        max-width: 100px;
        max-height: 100px;
      }
    }
    /* Ornamen dinamis */
    #logo-ornament.ornament-square {
      border-radius: 20px;
      box-shadow: 0 0 20px #667eea;
      background: #f8f9fa;
      padding: 18px;
      border: 3px solid #667eea;
    }
    #logo-ornament.ornament-rectangle {
      border-radius: 10px 30px 10px 30px;
      box-shadow: 0 0 10px #764ba2;
      background: #f8f9fa;
      padding: 14px 28px;
      border: 3px solid #764ba2;
    }
    #logo-ornament.ornament-circle {
      border-radius: 50%;
      box-shadow: 0 0 30px #667eea;
      background: #f8f9fa;
      padding: 18px;
      border: 3px solid #667eea;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light position-fixed top-0 start-0 w-100" style="z-index: 1000; background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px);">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img src="/img/<%= (settings && settings.logo_filename) ? settings.logo_filename : 'logo.png' %>" alt="Logo" height="30">
          Portal Pelanggan
        </a>
        <div class="navbar-nav ms-auto">
          <!-- Tombol admin login dihilangkan -->
        </div>
      </div>
    </nav>
    
    <div class="login-card">
      <div class="login-header">
        <div class="logo-container" id="logo-ornament">
          <img id="logo-img" src="/img/<%= (settings && settings.logo_filename) ? settings.logo_filename : 'logo.svg' %>?ts=<%= Date.now() %>" alt="Logo">
        </div>
        <h4 class="mb-1 fw-bold">Portal Pelanggan</h4>
        <p class="mb-0 opacity-75"><%= settings.company_header %></p>
      </div>
      <div class="form-container">
        <form id="loginForm">
          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="phone" name="phone" placeholder="" autofocus>
            <label for="phone">
              <i class="bi bi-phone me-2"></i>Nomor HP atau ID Pelanggan (6 digit)
            </label>
            <small class="form-text text-muted" id="phoneHelp" style="display: none;">Masukkan nomor HP (08...) atau ID Pelanggan 6 digit</small>
          </div>
          <button type="submit" class="btn btn-primary btn-login w-100" id="loginBtn">
            <span class="btn-text">
              <i class="bi bi-box-arrow-in-right me-2"></i>Masuk
            </span>
            <span class="btn-loading" style="display:none;">
              <i class="bi bi-hourglass-split me-2"></i>Memproses...
            </span>
          </button>
        </form>
        <div id="loginAlert" style="display:none;"></div>
        <div class="text-center mt-3">
          <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#registerModal">
            <i class="bi bi-person-plus me-2"></i>Daftar Pelanggan
          </button>
        </div>
        <div class="text-center footer-text">
          <!-- Agent Registration Link -->
          <div class="mb-3">
            <h6 class="mb-2 text-muted">Ingin jadi Agent?</h6>
            <a href="/agent/login" class="btn btn-outline-success btn-sm">
              <i class="bi bi-person-plus me-2"></i>
              Daftar Agent Mandiri
            </a>
            <p class="small text-muted mt-2 mb-3">
              <i class="bi bi-info-circle me-1"></i>
              Daftar sekarang dan mulai transaksi setelah deposit
            </p>
          </div>
          
          <hr class="my-3">
          
          <p class="mb-2">
            <i class="bi bi-shield-check me-1"></i>
            Sistem keamanan terjamin
          </p>
          <p class="mb-2">
            <i class="bi bi-telephone me-1"></i>
            Butuh bantuan? Hubungi <%= settings.contact_phone || 'Admin' %>
          </p>
          
          <p class="mb-0">
            &copy; <%= new Date().getFullYear() %> <%= typeof settings !== 'undefined' && settings.footer_info ? settings.footer_info : 'CV Lintas Multimedia' %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Register Customer Modal -->
  <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="registerModalLabel">
            <i class="bi bi-person-plus me-2"></i>Daftar Pelanggan Baru
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form id="registerForm" enctype="multipart/form-data">
          <div class="modal-body">
            <div class="alert alert-info">
              <i class="bi bi-info-circle me-2"></i>
              <small>Isi data sesuai KTP. Field yang tidak diisi akan diisi otomatis oleh sistem.</small>
            </div>
            
            <div class="mb-3">
              <label for="reg_name" class="form-label">Nama Lengkap Sesuai KTP *</label>
              <input type="text" class="form-control" id="reg_name" name="name" required placeholder="Contoh: Budi Santoso">
            </div>
            
            <div class="mb-3">
              <label for="reg_phone" class="form-label">No Handphone WA *</label>
              <input type="text" class="form-control" id="reg_phone" name="phone" required placeholder="08xxxxxxxxxx">
              <small class="form-text text-muted">Nomor yang digunakan untuk WhatsApp</small>
            </div>
            
            <div class="mb-3">
              <label for="reg_email" class="form-label">Email Aktif</label>
              <input type="email" class="form-control" id="reg_email" name="email" placeholder="contoh@email.com">
              <small class="form-text text-muted">Jika kosong, akan dibuat otomatis: namapelanggan@gmail.com</small>
            </div>
            
            <div class="mb-3">
              <label for="reg_address" class="form-label">Alamat</label>
              <textarea class="form-control" id="reg_address" name="address" rows="3" placeholder="Alamat lengkap tempat tinggal"></textarea>
            </div>
            
            <div class="mb-3">
              <label for="reg_package_id" class="form-label">Paket Langganan *</label>
              <select class="form-select" id="reg_package_id" name="package_id" required>
                <option value="">-- Pilih Paket --</option>
                <!-- Options will be loaded via AJAX -->
              </select>
              <small class="form-text text-muted">Pilih paket internet yang diinginkan</small>
            </div>
            
            <hr class="my-3">
            <h6 class="mb-3"><i class="bi bi-images me-2"></i>Upload Dokumen</h6>
            
            <div class="mb-3">
              <label for="reg_ktp_photo" class="form-label">Upload Foto KTP *</label>
              <input type="file" class="form-control" id="reg_ktp_photo" name="ktp_photo" accept="image/*" required>
              <small class="form-text text-muted">Format: JPG, PNG, atau GIF. Maksimal 20MB</small>
              <div id="ktp_preview" class="mt-2" style="display: none;">
                <img id="ktp_preview_img" src="" alt="Preview KTP" class="img-thumbnail" style="max-width: 200px; max-height: 200px;">
              </div>
            </div>
            
            <div class="mb-3">
              <label for="reg_house_photo" class="form-label">Upload Rumah Tampak Depan *</label>
              <input type="file" class="form-control" id="reg_house_photo" name="house_photo" accept="image/*" required>
              <small class="form-text text-muted">Format: JPG, PNG, atau GIF. Maksimal 20MB</small>
              <div id="house_preview" class="mt-2" style="display: none;">
                <img id="house_preview_img" src="" alt="Preview Rumah" class="img-thumbnail" style="max-width: 200px; max-height: 200px;">
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
            <button type="submit" class="btn btn-primary" id="registerBtn">
              <span class="btn-text">
                <i class="bi bi-check-circle me-2"></i>Daftar
              </span>
              <span class="btn-loading" style="display:none;">
                <i class="bi bi-hourglass-split me-2"></i>Mendaftar...
              </span>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Toast Container -->
  <div id="toast-container" style="position: fixed; top: 20px; right: 20px; z-index: 9999;"></div>

  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    // Fungsi toast notification
    function showToast(type, title, message, duration = 5000) {
        const toastId = 'toast-' + Date.now();
        const iconClass = type === 'success' ? 'bi-check-circle' : type === 'error' ? 'bi-x-circle' : 'bi-info-circle';
        const bgClass = type === 'success' ? 'bg-success' : type === 'error' ? 'bg-danger' : 'bg-primary';
        
        const toastHtml = `
            <div id="${toastId}" class="toast align-items-center text-white ${bgClass} border-0" role="alert" aria-live="assertive" aria-atomic="true" style="min-width: 300px;">
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="bi ${iconClass} me-2"></i>
                        <strong>${title}</strong><br>
                        <small>${message}</small>
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        `;
        
        $('#toast-container').append(toastHtml);
        const toastElement = document.getElementById(toastId);
        const toast = new bootstrap.Toast(toastElement, { delay: duration });
        toast.show();
        
        // Auto remove after hide
        toastElement.addEventListener('hidden.bs.toast', () => {
            toastElement.remove();
        });
    }

    // Hide help text when user focuses on input
    $('#phone').on('focus', function() {
        $('#phoneHelp').fadeOut(200);
    });
    
    // Show help text when input is empty and loses focus
    $('#phone').on('blur', function() {
        if ($(this).val().trim() === '') {
            $('#phoneHelp').fadeIn(200);
        }
    });
    
    // Hide help text when user starts typing
    $('#phone').on('input', function() {
        if ($(this).val().trim() !== '') {
            $('#phoneHelp').fadeOut(200);
        }
    });

    // Load packages when register modal is opened
    $('#registerModal').on('show.bs.modal', function() {
        loadPackagesForRegistration();
    });

    // Load packages for registration dropdown
    function loadPackagesForRegistration() {
        $.get('/customer/api/packages', function(response) {
            if (response.success && response.packages) {
                const select = $('#reg_package_id');
                select.empty();
                select.append('<option value="">-- Pilih Paket --</option>');
                response.packages.forEach(function(pkg) {
                    select.append(`<option value="${pkg.id}">${pkg.name} - ${pkg.speed} (Rp ${parseInt(pkg.price).toLocaleString('id-ID')})</option>`);
                });
            } else {
                showToast('error', 'Error', 'Gagal memuat daftar paket. Silakan refresh halaman.');
            }
        }).fail(function() {
            showToast('error', 'Error', 'Gagal memuat daftar paket. Silakan refresh halaman.');
        });
    }

    // Preview image before upload
    $('#reg_ktp_photo').on('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            // Validate file size (20MB = 20 * 1024 * 1024 bytes)
            if (file.size > 20 * 1024 * 1024) {
                showToast('error', 'Error', 'Ukuran file Foto KTP terlalu besar. Maksimal 20MB');
                $(this).val('');
                return;
            }
            const reader = new FileReader();
            reader.onload = function(e) {
                $('#ktp_preview_img').attr('src', e.target.result);
                $('#ktp_preview').show();
            };
            reader.readAsDataURL(file);
        } else {
            $('#ktp_preview').hide();
        }
    });
    
    $('#reg_house_photo').on('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            // Validate file size (20MB = 20 * 1024 * 1024 bytes)
            if (file.size > 20 * 1024 * 1024) {
                showToast('error', 'Error', 'Ukuran file Rumah Tampak Depan terlalu besar. Maksimal 20MB');
                $(this).val('');
                return;
            }
            const reader = new FileReader();
            reader.onload = function(e) {
                $('#house_preview_img').attr('src', e.target.result);
                $('#house_preview').show();
            };
            reader.readAsDataURL(file);
        } else {
            $('#house_preview').hide();
        }
    });

    // Handle registration form submit
    $('#registerForm').on('submit', function(e) {
        e.preventDefault();
        
        const name = $('#reg_name').val().trim();
        const phone = $('#reg_phone').val().trim();
        const email = $('#reg_email').val().trim();
        const address = $('#reg_address').val().trim();
        const package_id = $('#reg_package_id').val();
        const ktpPhoto = $('#reg_ktp_photo')[0].files[0];
        const housePhoto = $('#reg_house_photo')[0].files[0];
        
        // Validation
        if (!name || !phone || !package_id) {
            showToast('error', 'Error', 'Nama, No Handphone, dan Paket wajib diisi');
            return;
        }
        
        // Validate photos
        if (!ktpPhoto) {
            showToast('error', 'Error', 'Foto KTP wajib diupload');
            return;
        }
        if (!housePhoto) {
            showToast('error', 'Error', 'Foto Rumah Tampak Depan wajib diupload');
            return;
        }
        
        // Validate file sizes
        if (ktpPhoto.size > 20 * 1024 * 1024) {
            showToast('error', 'Error', 'Ukuran file Foto KTP terlalu besar. Maksimal 20MB');
            return;
        }
        if (housePhoto.size > 20 * 1024 * 1024) {
            showToast('error', 'Error', 'Ukuran file Rumah Tampak Depan terlalu besar. Maksimal 20MB');
            return;
        }
        
        // Validate phone format
        if (!/^08[0-9]{8,13}$/.test(phone) && !/^\+?62[0-9]{8,13}$/.test(phone)) {
            showToast('error', 'Error', 'Format nomor handphone tidak valid. Gunakan format 08xxxxxxxxxx');
            return;
        }
        
        // Show loading
        const $btn = $('#registerBtn');
        const $btnText = $btn.find('.btn-text');
        const $btnLoading = $btn.find('.btn-loading');
        $btn.prop('disabled', true);
        $btnText.hide();
        $btnLoading.show();
        
        // Create FormData for file upload
        const formData = new FormData();
        formData.append('name', name);
        formData.append('phone', phone);
        formData.append('email', email);
        formData.append('address', address);
        formData.append('package_id', package_id);
        formData.append('ktp_photo', ktpPhoto);
        formData.append('house_photo', housePhoto);
        
        // Submit registration with file upload
        $.ajax({
            url: '/customer/register',
            method: 'POST',
            processData: false,
            contentType: false,
            data: formData,
            success: function(response) {
                if (response.success) {
                    showToast('success', 'Registrasi Berhasil', 'Akun Anda berhasil didaftarkan. Silakan login dengan nomor HP atau ID Pelanggan Anda.');
                    $('#registerModal').modal('hide');
                    $('#registerForm')[0].reset();
                    $('#ktp_preview').hide();
                    $('#house_preview').hide();
                    // Show customer ID if available
                    if (response.customer_id) {
                        setTimeout(() => {
                            showToast('info', 'ID Pelanggan Anda', `ID Pelanggan: ${response.customer_id}. Gunakan ID ini untuk login.`);
                        }, 2000);
                    }
                } else {
                    showToast('error', 'Registrasi Gagal', response.message || 'Terjadi kesalahan saat mendaftar');
                }
            },
            error: function(xhr) {
                const errorMsg = xhr.responseJSON?.message || xhr.responseJSON?.details || 'Terjadi kesalahan saat mendaftar';
                showToast('error', 'Error', errorMsg);
            },
            complete: function() {
                $btn.prop('disabled', false);
                $btnText.show();
                $btnLoading.hide();
            }
        });
    });

    // Handler form login
    $('#loginForm').on('submit', function(e) {
        e.preventDefault();
        
        const input = $('#phone').val().trim();
        
        // Check if input is 6 digit (format lama) atau 10 digit (customer_id format: yy-mm-dd hh:mm) or phone number
        let data = {};
        if (/^\d{6}$/.test(input) || /^\d{10}$/.test(input)) {
            // 6 digit (format lama) atau 10 digit (format baru: yy-mm-dd hh:mm, contoh: 2512021009) = customer_id
            data.customer_id = input;
        } else if (input.match(/^08[0-9]{8,13}$/) || input.match(/^\+?62[0-9]{8,13}$/)) {
            // Phone number
            data.phone = input;
        } else {
            showToast('error', 'Error', 'Masukkan nomor HP (08...) atau ID Pelanggan (6 atau 10 digit)');
            return;
        }
        
        // Loading state
        const $btn = $('#loginBtn');
        const $btnText = $btn.find('.btn-text');
        const $btnLoading = $btn.find('.btn-loading');
        
        $btn.prop('disabled', true);
        $btnText.hide();
        $btnLoading.show();
        
        // Kirim request
        $.ajax({
            url: '/customer/login',
            method: 'POST',
            data: data,
            success: function(response) {
                if (response.success) {
                    const target = response.redirect || '/customer/dashboard';
                    showToast('success', 'Login Berhasil', 'Mengalihkan...');
                    setTimeout(() => {
                        window.location.href = target;
                    }, 800);
                } else {
                    showToast('error', 'Login Gagal', response.message || 'Nomor HP tidak terdaftar');
                }
            },
            error: function(xhr) {
                const errorMsg = xhr.responseJSON?.message || 'Terjadi kesalahan saat login';
                showToast('error', 'Error', errorMsg);
            },
            complete: function() {
                // Reset button
                $btn.prop('disabled', false);
                $btnText.show();
                $btnLoading.hide();
            }
        });
    });

    // Ornamen dinamis untuk logo
    window.addEventListener('DOMContentLoaded', function() {
      const logoImg = document.getElementById('logo-img');
      const ornament = document.getElementById('logo-ornament');
      function updateOrnament() {
        if (!logoImg.naturalWidth || !logoImg.naturalHeight) return;
        const w = logoImg.naturalWidth;
        const h = logoImg.naturalHeight;
        ornament.classList.remove('ornament-square', 'ornament-rectangle', 'ornament-circle');
        if (Math.abs(w - h) < 10) {
          ornament.classList.add('ornament-square');
        } else if (w > h * 1.2) {
          ornament.classList.add('ornament-rectangle');
        } else if (h > w * 1.2) {
          ornament.classList.add('ornament-rectangle');
        } else {
          ornament.classList.add('ornament-square');
        }
      }
      if (logoImg.complete) {
        updateOrnament();
      } else {
        logoImg.onload = updateOrnament;
      }
    });
  </script>
</body>
</html> 