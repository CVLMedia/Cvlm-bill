<script>
// Modern Notification Function
function showNotification(type, title, message, buttonText, callback) {
  const modal = document.getElementById('notificationModal');
  const icon = document.getElementById('notificationIcon');
  const iconClass = document.getElementById('notificationIconClass');
  const titleEl = document.getElementById('notificationTitle');
  const messageEl = document.getElementById('notificationMessage');
  const button = document.getElementById('notificationButton');
  const buttonCancel = document.getElementById('notificationButtonCancel');

  // Hide cancel button for simple notifications
  buttonCancel.style.display = 'none';

  // Set icon
  icon.className = 'notification-icon ' + type;
  if (type === 'success') {
    iconClass.className = 'bi bi-check-circle-fill';
  } else if (type === 'error') {
    iconClass.className = 'bi bi-x-circle-fill';
  } else if (type === 'warning') {
    iconClass.className = 'bi bi-exclamation-triangle-fill';
  } else {
    iconClass.className = 'bi bi-info-circle-fill';
  }

  // Set content
  titleEl.textContent = title;
  messageEl.textContent = message;
  button.textContent = buttonText;
  button.className = 'notification-button ' + type;

  // Show modal
  modal.classList.add('show');

  // Set button click handler
  button.onclick = function() {
    closeNotification();
    if (callback && typeof callback === 'function') {
      callback();
    }
  };

  // Auto close after 5 seconds if no callback
  if (!callback) {
    setTimeout(function() {
      closeNotification();
    }, 5000);
  }
}

// Confirm Notification Function (with 2 buttons)
function showConfirmNotification(type, title, message, confirmText, cancelText, confirmCallback) {
  const modal = document.getElementById('notificationModal');
  const icon = document.getElementById('notificationIcon');
  const iconClass = document.getElementById('notificationIconClass');
  const titleEl = document.getElementById('notificationTitle');
  const messageEl = document.getElementById('notificationMessage');
  const button = document.getElementById('notificationButton');
  const buttonCancel = document.getElementById('notificationButtonCancel');

  // Show both buttons for confirm
  buttonCancel.style.display = 'inline-block';

  // Set icon
  icon.className = 'notification-icon ' + type;
  if (type === 'success') {
    iconClass.className = 'bi bi-check-circle-fill';
  } else if (type === 'error') {
    iconClass.className = 'bi bi-x-circle-fill';
  } else if (type === 'warning') {
    iconClass.className = 'bi bi-exclamation-triangle-fill';
  } else {
    iconClass.className = 'bi bi-info-circle-fill';
  }

  // Set content
  titleEl.textContent = title;
  messageEl.textContent = message;
  button.textContent = confirmText;
  button.className = 'notification-button ' + type;
  buttonCancel.textContent = cancelText;

  // Show modal
  modal.classList.add('show');

  // Set button click handlers
  button.onclick = function() {
    closeNotification();
    if (confirmCallback && typeof confirmCallback === 'function') {
      confirmCallback();
    }
  };

  buttonCancel.onclick = function() {
    closeNotification();
  };
}

function closeNotification() {
  const modal = document.getElementById('notificationModal');
  modal.classList.remove('show');
}

// Close on overlay click
document.addEventListener('DOMContentLoaded', function() {
  const modal = document.getElementById('notificationModal');
  if (modal) {
    modal.addEventListener('click', function(e) {
      if (e.target === this) {
        closeNotification();
      }
    });
  }
});

$(function() {
  // Load profiles ke select
  function loadProfiles(selectedProfile) {
    $.get('/admin/mikrotik/profiles/api', function(res) {
      if(res.success) {
        var $profile = $('#profile');
        $profile.empty();
        $profile.append('<option value="">Pilih Profile</option>');
        res.profiles.forEach(function(p) {
          var val = p.name || p['.name'] || p['.id'] || '';
          var label = p.name || p['.name'] || p['.id'] || '-';
          $profile.append('<option value="'+val+'">'+label+'</option>');
        });
        if(selectedProfile) $profile.val(selectedProfile);
        
        // Update profile count in statistics card
        $('#profileCount').text(res.profiles.length);
      } else {
        showNotification('error', 'Error!', 'Gagal ambil daftar profile PPPoE: ' + (res.message || 'Unknown error'), 'Try again');
      }
    });
  }
  // Tambah User
  $('#btnTambahUser').on('click', function() {
    $('#userId').val('');
    $('#username').val('');
    $('#password').val('');
    loadProfiles();
    $('#userModalLabel').text('Tambah User PPPoE');
    $('#userModal').modal('show');
  });
  // Edit User PPPoE
  $(document).on('click', '.edit-user-btn', function() {
    $('#userId').val($(this).data('id'));
    $('#username').val($(this).data('username'));
    $('#password').val($(this).data('password'));
    loadProfiles($(this).data('profile'));
    $('#userModalLabel').text('Edit User PPPoE');
    $('#userModal').modal('show');
  });
  // Submit Tambah/Edit
  $('#userForm').submit(function(e) {
    e.preventDefault();
    const id = $('#userId').val();
    const username = $('#username').val();
    const password = $('#password').val();
    const profile = $('#profile').val();
    const url = id ? '/admin/mikrotik/edit-user' : '/admin/mikrotik/add-user';
    const router_id = $('#router_id').val();
    $.post(url, { id, username, password, profile, router_id }, function(res) {
      if(res.success) {
        showNotification('success', 'Success!', 'User PPPoE berhasil disimpan!', 'Continue', function() {
          location.reload();
        });
      } else {
        showNotification('error', 'Error!', 'Gagal menyimpan user: ' + (res.message || 'Unknown error'), 'Try again');
      }
    });
  });
  // Hapus User PPPoE
  $(document).on('click', '.delete-user-btn', function() {
    const username = $(this).data('username');
    const id = $(this).data('id');

    showConfirmNotification('warning', 'Konfirmasi!', 'Yakin ingin menghapus user PPPoE \"' + username + '\"?', 'Hapus', 'Batal', function() {
      $.post('/admin/mikrotik/delete-user', { id }, function(res) {
        if(res.success) {
          showNotification('success', 'Success!', 'User PPPoE berhasil dihapus!', 'Continue', function() {
            location.reload();
          });
        } else {
          showNotification('error', 'Error!', 'Gagal menghapus user: ' + (res.message || 'Unknown error'), 'Try again');
        }
      });
    });
  });
  
  // Load profiles on page load to update statistics
  loadProfiles();
  
  // Update user statistics with real data
  function updateUserStats() {
    $.get('/admin/mikrotik/user-stats', function(res) {
      if(res.success) {
        // Update the statistics cards with real data
        $('#totalUsers').text(res.totalUsers || 0);
        $('#activeUsers').text(res.activeUsers || 0);
        $('#offlineUsers').text(res.offlineUsers || 0);
      } else {
        console.error('Failed to get user stats:', res.message);
      }
    }).fail(function(error) {
      console.error('Error fetching user stats:', error);
    });
  }
  
  // Update user statistics on page load
  updateUserStats();
  
  // Refresh statistics every 30 seconds
  setInterval(function() {
    loadProfiles();
    updateUserStats();
  }, 30000);
  
  // Refresh stats button
  $('#btnRefreshStats').on('click', function() {
    loadProfiles();
    updateUserStats();
