                        <div class="metric-card-icon">
                            <i class="bi bi-person-check"></i>
                        </div>
                        <div class="metric-card-value" id="activeUsers">-</div>
                        <div class="metric-card-label">User Aktif</div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="metric-card metric-card-danger">
                        <div class="metric-card-icon">
                            <i class="bi bi-person-x"></i>
                        </div>
                        <div class="metric-card-value" id="offlineUsers">-</div>
                        <div class="metric-card-label">User Offline</div>
                    </div>
                </div>
