    $(document).on('click', '.btn-detail', function() {
        const id = $(this).data('id');
        const routerId = $(this).data('router-id');
        showDetail(id, routerId);
    });

    // Delete Profile
    $(document).on('click', '.btn-delete', function() {
        const id = $(this).data('id');
        const name = $(this).data('name');
        const routerId = $(this).data('router-id');
        
        showConfirmNotification('warning', 'Konfirmasi!', `Yakin ingin menghapus profile \"${name}\"?`, 'Hapus', 'Batal', function() {
            deleteProfile(id, routerId);
        });
    });

    // Preset buttons
    $('.preset-btn').on('click', function() {
        const rate = $(this).data('rate');
        const unit = $(this).data('unit');
        $('#rateLimit').val(rate);
        $('#rateLimitUnit').val(unit);
    });

    // Form submission
    $('#profileForm').on('submit', function(e) {
        e.preventDefault();
        saveProfile();
    });

    // Helper functions
    function resetForm() {
        $('#profileForm')[0].reset();
        $('#profileId').val('');
    }

    function fillForm(profile) {
        $('#profileId').val(profile['.id']);
        $('#profileRouterId').val(profile.nas_id || '');
        $('#profileName').val(profile.name);
        $('#profileComment').val(profile.comment);
        
        // Parse rate limit from Mikrotik format (e.g., "5M/5M" or "5M")
        const rateLimitRaw = profile['rate-limit'] || profile.rateLimit || '';
        if (rateLimitRaw) {
            // Parse format like "5M/5M" or "5M" - extract number and unit
            const match = rateLimitRaw.match(/^(\d+)([kKmMgG])(?:\/\d+[kKmMgG])?$/);
            if (match) {
                $('#rateLimit').val(match[1]); // Number part
                const unit = match[2].toLowerCase();
                // Map Mikrotik unit to form unit
                if (unit === 'k') $('#rateLimitUnit').val('k');
                else if (unit === 'm') $('#rateLimitUnit').val('M');
                else if (unit === 'g') $('#rateLimitUnit').val('G');
            } else {
                $('#rateLimit').val('');
                $('#rateLimitUnit').val('k');
            }
        } else {
            $('#rateLimit').val('');
            $('#rateLimitUnit').val('k');
        }
        
        // Parse session timeout from Mikrotik format (e.g., "2h", "30m", "60s", "1d")
        const sessionTimeoutRaw = profile['session-timeout'] || profile.sessionTimeout || '';
        if (sessionTimeoutRaw) {
            // Parse format like "2h", "30m", "60s", "1d"
            const match = sessionTimeoutRaw.match(/^(\d+)([smhdSMHD])$/);
            if (match) {
                $('#sessionTimeout').val(match[1]); // Number part
                const unit = match[2].toLowerCase();
                // Map Mikrotik unit to form unit (Indonesian)
                if (unit === 's') $('#sessionTimeoutUnit').val('detik');
                else if (unit === 'm') $('#sessionTimeoutUnit').val('menit');
                else if (unit === 'h') $('#sessionTimeoutUnit').val('jam');
                else if (unit === 'd') $('#sessionTimeoutUnit').val('hari');
            } else {
                $('#sessionTimeout').val('');
                $('#sessionTimeoutUnit').val('jam');
            }
        } else {
            $('#sessionTimeout').val('');
            $('#sessionTimeoutUnit').val('jam');
        }
        
        // Parse idle timeout from Mikrotik format (e.g., "3m", "30s", "1h")
        const idleTimeoutRaw = profile['idle-timeout'] || profile.idleTimeout || '';
        if (idleTimeoutRaw) {
            // Parse format like "3m", "30s", "1h", "1d"
            const match = idleTimeoutRaw.match(/^(\d+)([smhdSMHD])$/);
            if (match) {
                $('#idleTimeout').val(match[1]); // Number part
                const unit = match[2].toLowerCase();
                // Map Mikrotik unit to form unit (Indonesian)
                if (unit === 's') $('#idleTimeoutUnit').val('detik');
                else if (unit === 'm') $('#idleTimeoutUnit').val('menit');
                else if (unit === 'h') $('#idleTimeoutUnit').val('jam');
                else if (unit === 'd') $('#idleTimeoutUnit').val('hari');
            } else {
                $('#idleTimeout').val('');
                $('#idleTimeoutUnit').val('menit');
            }
        } else {
            $('#idleTimeout').val('');
            $('#idleTimeoutUnit').val('menit');
        }
        
        // Handle shared users (field lain tidak didukung oleh API Mikrotik)
        $('#sharedUsers').val(profile['shared-users'] || profile.sharedUsers || '1');
    }

