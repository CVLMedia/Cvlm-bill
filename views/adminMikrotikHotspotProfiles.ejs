<div class="container-fluid">
    <div class="row">
        <!-- Include Responsive Admin Sidebar -->
        <%- include('partials/admin-responsive-sidebar', { page: 'hotspot-profiles', settings: settings }) %>

        <main class="col-md-10 main-content ms-sm-auto">
            <button class="hamburger d-block d-md-none mb-3" id="hamburgerBtn" aria-label="Menu"><i class="bi bi-list"></i></button>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3>Profile Hotspot</h3>
                <button class="btn btn-primary" id="btnTambahProfile">
                    <i class="bi bi-plus-circle"></i> Tambah Profile
                </button>
            </div>

            <!-- Statistik -->
            <div class="row mb-4">
                <div class="col-md-3 mb-3">
                    <div class="metric-card metric-card-primary">
                        <div class="metric-card-icon">
                            <i class="bi bi-list-ul"></i>
                        </div>
                        <div class="metric-card-value" id="totalProfiles">0</div>
                        <div class="metric-card-label">Total Profile</div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="metric-card metric-card-success">
                        <div class="metric-card-icon">
                            <i class="bi bi-check-circle"></i>
                        </div>
                        <div class="metric-card-value" id="activeProfiles">0</div>
                        <div class="metric-card-label">Aktif</div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="metric-card metric-card-warning">
                        <div class="metric-card-icon">
                            <i class="bi bi-speedometer2"></i>
                        </div>
                        <div class="metric-card-value" id="rateLimitedProfiles">0</div>
                        <div class="metric-card-label">Rate Limited</div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="metric-card metric-card-info">
                        <div class="metric-card-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <div class="metric-card-value" id="sharedUsersProfiles">0</div>
                        <div class="metric-card-label">Shared Users</div>
                    </div>
                </div>
            </div>

            <!-- Filter dan Pencarian -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="searchProfile" class="form-label">Cari Profile</label>
                            <input type="text" class="form-control" id="searchProfile" placeholder="Nama profile...">
                        </div>
                        <div class="col-md-3">
                            <label for="filterStatus" class="form-label">Status</label>
                            <select class="form-select" id="filterStatus">
                                <option value="">Semua Status</option>
                                <option value="active">Aktif</option>
                                <option value="inactive">Tidak Aktif</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="filterType" class="form-label">Tipe</label>
                            <select class="form-select" id="filterType">
                                <option value="">Semua Tipe</option>
                                <option value="simple">Simple</option>
                                <option value="shared">Shared</option>
                                <option value="rate-limited">Rate Limited</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <button class="btn btn-outline-secondary w-100" id="btnRefresh">
                                <i class="bi bi-arrow-clockwise"></i> Refresh
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tabel Profile -->
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="profileTable">
                            <thead class="table-light">
                                <tr>
                                    <th>No</th>
                                    <th>Nama Profile</th>
                                    <th>NAS Status</th>
                                    <th>Rate Limit</th>
                                    <th>Session Timeout</th>
                                    <th>Idle Timeout</th>
                                    <th>Status</th>
                                    <th>Aksi</th>
