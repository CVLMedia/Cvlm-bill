        console.log('Form Data:', formData);
        console.log('Rate Limit:', formData.rateLimit, formData.rateLimitUnit);
        console.log('Session Timeout:', formData.sessionTimeout, formData.sessionTimeoutUnit);
        console.log('Idle Timeout:', formData.idleTimeout, formData.idleTimeoutUnit);

        const url = formData.id ? '/admin/mikrotik/hotspot-profiles/edit' : '/admin/mikrotik/hotspot-profiles/add';
        
        $.post(url, formData, function(res) {
            if (res.success) {
                showNotification('success', 'Success!', 'Profile hotspot berhasil disimpan!', 'Continue', function() {
                    $('#profileModal').modal('hide');
                    loadProfiles();
                });
            } else {
                const msg = 'Gagal menyimpan profile: ' + (res.message || 'Unknown error');
                console.error('Save error:', res);
                showNotification('error', 'Error!', msg, 'Try again');
            }
        }).fail(function(xhr, status, error) {
            console.error('AJAX Error:', status, error);
            showNotification('error', 'Error!', 'Gagal menyimpan profile: ' + error, 'Try again');
        });
    }

    function deleteProfile(id, routerId) {
        $.post('/admin/mikrotik/hotspot-profiles/delete', { id, router_id: routerId }, function(res) {
            if (res.success) {
                showNotification('success', 'Success!', 'Profile hotspot berhasil dihapus!', 'Continue', function() {
