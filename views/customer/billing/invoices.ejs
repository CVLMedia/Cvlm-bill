<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= appSettings.companyHeader %></title>
    <link rel="manifest" href="/manifest.webmanifest">
    <meta name="theme-color" content="#0B1437">
    <link rel="apple-touch-icon" href="/img/icons/icon-192.png">
    <link rel="stylesheet" href="/css/pwa.css">
    <link rel="stylesheet" href="/css/customer-responsive.css">
    <script defer src="/js/pwa-install.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body { background: #f8f9fa; }
        .navbar-brand img { max-height: 40px; }
        .card { border: none; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
        .table th { border-top: none; font-weight: 600; }
        .badge { font-size: 0.75rem; }
    </style>
</head>
<body>
    <!-- Navbar atas dihilangkan untuk tampilan mobile minimalis -->

    <div class="container mt-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="customer-header">
                    <h2 class="mb-1">Tagihan Saya</h2>
                    <p class="text-muted mb-0">Kelola dan lihat semua tagihan Anda</p>
                </div>
            </div>
        </div>

        <!-- Invoice List -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-receipt"></i> Daftar Tagihan
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>No. Tagihan</th>
                                        <th>Paket</th>
                                        <th>Jumlah</th>
                                        <th>Status</th>
                                        <th>Jatuh Tempo</th>
                                        <th>Tanggal Dibuat</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (invoices && invoices.length > 0) { %>
                                        <% invoices.forEach(function(invoice) { %>
                                            <tr>
                                                <td>
                                                    <strong><%= invoice.invoice_number %></strong>
                                                </td>
                                                <td><%= invoice.package_name %></td>
                                                <td>Rp <%= Math.round(parseFloat(invoice.amount)).toLocaleString('id-ID') %></td>
                                                <td>
                                                    <% if (invoice.status === 'paid') { %>
                                                        <span class="badge bg-success">Lunas</span>
                                                    <% } else if (invoice.status === 'unpaid') { %>
                                                        <% if (new Date(invoice.due_date) < new Date()) { %>
                                                            <span class="badge bg-danger">Terlambat</span>
                                                        <% } else { %>
                                                            <span class="badge bg-warning">Belum Lunas</span>
                                                        <% } %>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (new Date(invoice.due_date) < new Date() && invoice.status === 'unpaid') { %>
                                                        <span class="text-danger">
                                                            <%= new Date(invoice.due_date).toLocaleDateString('id-ID') %>
                                                        </span>
                                                    <% } else { %>
                                                        <%= new Date(invoice.due_date).toLocaleDateString('id-ID') %>
                                                    <% } %>
                                                </td>
                                                <td><%= new Date(invoice.created_at).toLocaleDateString('id-ID') %></td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <% if (invoice.status === 'unpaid') { %>
                                                            <button type="button" class="btn btn-sm btn-success" onclick="openPaymentModal(<%= invoice.id %>, '<%= invoice.invoice_number %>', <%= invoice.amount %>)">
                                                                <i class="bi bi-credit-card"></i> Bayar
                                                            </button>
                                                        <% } %>
                                                        <a href="/customer/billing/invoices/<%= invoice.id %>" class="btn btn-sm btn-outline-primary">
                                                            <i class="bi bi-eye"></i> Detail
                                                        </a>
                                                        <a href="/customer/billing/invoices/<%= invoice.id %>/print" class="btn btn-sm btn-outline-info" target="_blank">
                                                            <i class="bi bi-printer"></i> Print
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="7" class="text-center text-muted py-4">
                                                <i class="bi bi-receipt fs-1 d-block mb-3"></i>
                                                <h5>Belum ada tagihan</h5>
                                                <p>Tagihan akan muncul di sini setelah admin membuat tagihan untuk Anda.</p>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="row mt-4 summary-cards">
            <div class="col-md-4 mb-3">
                <div class="card text-bg-primary">
                    <div class="card-body text-center">
                        <i class="bi bi-receipt fs-2 mb-2"></i>
                        <div class="fw-bold">Total Tagihan</div>
                        <div class="fs-3"><%= invoices ? invoices.length : 0 %></div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card text-bg-success">
                    <div class="card-body text-center">
                        <i class="bi bi-check-circle fs-2 mb-2"></i>
                        <div class="fw-bold">Lunas</div>
                        <div class="fs-3"><%= invoices ? invoices.filter(inv => inv.status === 'paid').length : 0 %></div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card text-bg-warning">
                    <div class="card-body text-center">
                        <i class="bi bi-exclamation-triangle fs-2 mb-2"></i>
                        <div class="fw-bold">Belum Lunas</div>
                        <div class="fs-3"><%= invoices ? invoices.filter(inv => inv.status === 'unpaid').length : 0 %></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light mt-5 py-4">
        <div class="container text-center">
            <p class="mb-0 text-muted">
                <%= appSettings.footerInfo %>
            </p>
        </div>
    </footer>

    <!-- Payment Modal -->
    <div class="modal fade" id="paymentModal" tabindex="-1" aria-labelledby="paymentModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="paymentModalLabel">
                        <i class="bi bi-credit-card"></i> Pilih Metode Pembayaran
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <strong>No. Tagihan:</strong> <span id="modal-invoice-number"></span><br>
                        <strong>Jumlah:</strong> <span id="modal-invoice-amount"></span>
                    </div>
                    <div id="payment-methods-container">
                        <div class="text-center py-3">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading payment methods...</span>
                            </div>
                            <p class="mt-2 mb-0">Memuat metode pembayaran...</p>
                        </div>
                    </div>
                    <div id="payment-processing" class="text-center" style="display: none;">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 mb-0">Memproses pembayaran...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/customer-mobile.js"></script>
    <script>
        let currentInvoiceId = null;
        let currentInvoiceAmount = 0;

        function openPaymentModal(invoiceId, invoiceNumber, amount) {
            currentInvoiceId = invoiceId;
            currentInvoiceAmount = amount;
            document.getElementById('modal-invoice-number').textContent = invoiceNumber;
            document.getElementById('modal-invoice-amount').textContent = 'Rp ' + Math.round(amount).toLocaleString('id-ID');
            
            const modal = new bootstrap.Modal(document.getElementById('paymentModal'));
            modal.show();
            
            // Load payment methods when modal is shown
            loadPaymentMethods();
        }

        // Load payment methods dynamically
        async function loadPaymentMethods() {
            try {
                const response = await fetch('/customer/billing/api/payment-methods');
                const result = await response.json();
                
                if (result.success && result.methodsByGateway) {
                    renderPaymentMethods(result.methodsByGateway);
                } else if (result.success && result.methods) {
                    // Fallback untuk kompatibilitas
                    renderPaymentMethods(result.methods);
                } else {
                    showPaymentMethodsError('Gagal memuat metode pembayaran: ' + (result.message || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error loading payment methods:', error);
                showPaymentMethodsError('Terjadi kesalahan saat memuat metode pembayaran');
            }
        }
        
        function renderPaymentMethods(methodsByGateway) {
            const container = document.getElementById('payment-methods-container');
            
            // Check if methodsByGateway is an object (grouped) or array (legacy)
            let isGrouped = methodsByGateway && typeof methodsByGateway === 'object' && !Array.isArray(methodsByGateway);
            
            if (!isGrouped) {
                // Legacy format: array of methods
                const methods = methodsByGateway || [];
                if (methods.length === 0) {
                    container.innerHTML = `
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            Tidak ada metode pembayaran yang tersedia saat ini.
                        </div>
                    `;
                    return;
                }
                
                let html = '<div class="row g-2 mb-3">';
                methods.forEach(method => {
                    const isDisabled = method.minimum_amount && currentInvoiceAmount < method.minimum_amount;
                    const disabledClass = isDisabled ? 'disabled' : '';
                    const disabledTitle = isDisabled ? `Minimal pembayaran: Rp ${method.minimum_amount?.toLocaleString('id-ID')}` : '';
                    
                    html += `
                        <div class="col-md-6">
                            <button class="btn btn-outline-${method.color} w-100 payment-method ${disabledClass}" 
                                    data-gateway="${method.gateway}" 
                                    data-method="${method.method}"
                                    ${isDisabled ? 'disabled' : ''}
                                    title="${disabledTitle}">
                                <i class="${method.icon}"></i><br>
                                <small>${method.name}</small>
                                <br><small class="text-muted">Fee: ${method.fee_customer || 'Gratis'}</small>
                                ${isDisabled ? `<br><small class="text-danger">Min: Rp ${method.minimum_amount?.toLocaleString('id-ID')}</small>` : ''}
                            </button>
                        </div>
                    `;
                });
                html += '</div>';
                container.innerHTML = html;
                bindPaymentMethodEvents();
                return;
            }
            
            // New format: grouped by gateway
            const gateways = Object.keys(methodsByGateway);
            if (gateways.length === 0) {
                container.innerHTML = `
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        Tidak ada metode pembayaran yang tersedia saat ini.
                    </div>
                `;
                return;
            }
            
            const gatewayNames = {
                'duitku': 'Duitku',
                'tripay': 'Tripay',
                'midtrans': 'Midtrans',
                'xendit': 'Xendit'
            };
            
            let html = '';
            
            // Pisahkan Duitku dari gateway lain
            const duitkuMethods = methodsByGateway.duitku || [];
            const otherGateways = gateways.filter(g => g !== 'duitku');
            
            // Kolom Duitku (jika ada)
            if (duitkuMethods.length > 0) {
                html += `
                    <div class="mb-4">
                        <h6 class="mb-3">
                            <i class="bi bi-wallet2 text-success"></i> 
                            <strong>Duitku</strong>
                        </h6>
                        <div class="row g-2">
                `;
                
                duitkuMethods.forEach(method => {
                    const isDisabled = method.minimum_amount && currentInvoiceAmount < method.minimum_amount;
                    const disabledClass = isDisabled ? 'disabled' : '';
                    const disabledTitle = isDisabled ? `Minimal pembayaran: Rp ${method.minimum_amount?.toLocaleString('id-ID')}` : '';
                    const iconHtml = method.image_url 
                        ? `<img src="${method.image_url}" alt="${method.name}" class="mb-1" style="height:24px;object-fit:contain;">`
                        : `<i class="${method.icon}"></i>`;
                    
                    html += `
                        <div class="col-md-6 col-lg-4">
                            <button class="btn btn-outline-${method.color} w-100 payment-method ${disabledClass}" 
                                    data-gateway="${method.gateway}" 
                                    data-method="${method.method}"
                                    ${isDisabled ? 'disabled' : ''}
                                    title="${disabledTitle}">
                                ${iconHtml}<br>
                                <small>${method.name}</small>
                                <br><small class="text-muted">Fee: ${method.fee_customer || 'Gratis'}</small>
                                ${isDisabled ? `<br><small class="text-danger">Min: Rp ${method.minimum_amount?.toLocaleString('id-ID')}</small>` : ''}
                            </button>
                        </div>
                    `;
                });
                
                html += `
                        </div>
                    </div>
                `;
            }
            
            // Kolom untuk gateway lainnya (Tripay, Midtrans, Xendit, dll)
            otherGateways.forEach(gateway => {
                const gatewayMethods = methodsByGateway[gateway] || [];
                if (gatewayMethods.length > 0) {
                    html += `
                        <div class="mb-4">
                            <h6 class="mb-3">
                                <i class="bi bi-credit-card text-primary"></i> 
                                <strong>${gatewayNames[gateway] || gateway.toUpperCase()}</strong>
                            </h6>
                            <div class="row g-2">
                    `;
                    
                    gatewayMethods.forEach(method => {
                        const isDisabled = method.minimum_amount && currentInvoiceAmount < method.minimum_amount;
                        const disabledClass = isDisabled ? 'disabled' : '';
                        const disabledTitle = isDisabled ? `Minimal pembayaran: Rp ${method.minimum_amount?.toLocaleString('id-ID')}` : '';
                        
                        html += `
                            <div class="col-md-6 col-lg-4">
                                <button class="btn btn-outline-${method.color} w-100 payment-method ${disabledClass}" 
                                        data-gateway="${method.gateway}" 
                                        data-method="${method.method}"
                                        ${isDisabled ? 'disabled' : ''}
                                        title="${disabledTitle}">
                                    <i class="${method.icon}"></i><br>
                                    <small>${method.name}</small>
                                    <br><small class="text-muted">Fee: ${method.fee_customer || 'Gratis'}</small>
                                    ${isDisabled ? `<br><small class="text-danger">Min: Rp ${method.minimum_amount?.toLocaleString('id-ID')}</small>` : ''}
                                </button>
                            </div>
                        `;
                    });
                    
                    html += `
                            </div>
                        </div>
                    `;
                }
            });
            
            container.innerHTML = html;
            
            // Bind event listeners to new buttons
            bindPaymentMethodEvents();
        }
        
        function showPaymentMethodsError(message) {
            const container = document.getElementById('payment-methods-container');
            container.innerHTML = `
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-circle"></i>
                    ${message}
                </div>
                <button class="btn btn-outline-primary w-100" onclick="loadPaymentMethods()">
                    <i class="bi bi-arrow-clockwise"></i> Coba Lagi
                </button>
            `;
        }
        
        // Handle payment method selection
        function bindPaymentMethodEvents() {
            document.querySelectorAll('.payment-method').forEach(button => {
                button.addEventListener('click', async function() {
                    if (this.disabled) return;
                    
                    const gateway = this.dataset.gateway;
                    const method = this.dataset.method;
                    const invoiceId = currentInvoiceId;
                    
                    // Show loading
                    document.getElementById('payment-processing').style.display = 'block';
                    this.disabled = true;
                    
                    try {
                        const response = await fetch('/customer/billing/create-payment', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                invoice_id: invoiceId,
                                gateway: gateway,
                                method: method
                            })
                        });
                        
                        const result = await response.json();
                        
                        if (result.success) {
                            // Redirect to payment URL
                            if (result.data && result.data.payment_url) {
                                window.open(result.data.payment_url, '_blank');
                                
                                // Close modal and refresh page after 2 seconds
                                const modal = bootstrap.Modal.getInstance(document.getElementById('paymentModal'));
                                if (modal) modal.hide();
                                
                                setTimeout(() => {
                                    window.location.reload();
                                }, 2000);
                            } else {
                                alert('Error: Payment URL tidak ditemukan');
                            }
                        } else {
                            alert('Error: ' + (result.message || 'Gagal membuat pembayaran'));
                        }
                    } catch (error) {
                        console.error('Payment error:', error);
                        alert('Terjadi kesalahan saat membuat pembayaran: ' + error.message);
                    } finally {
                        // Hide loading
                        document.getElementById('payment-processing').style.display = 'none';
                        this.disabled = false;
                    }
                });
            });
        }
    </script>

    <!-- Bottom nav (mobile) 5 menu -->
    <nav class="bottom-nav d-md-none">
        <a class="nav-item" href="/customer/billing/dashboard">
            <i class="bi bi-speedometer2"></i>
            <span>Billing</span>
        </a>
        <a class="nav-item" href="/customer/trouble/report">
            <i class="bi bi-exclamation-triangle"></i>
            <span>Laporan</span>
        </a>
        <a class="nav-item home-button" href="/customer/dashboard">
            <i class="bi bi-house"></i>
            <span>Home</span>
        </a>
        <a class="nav-item" href="/customer/billing/invoices">
            <i class="bi bi-receipt"></i>
            <span>Invoice</span>
        </a>
        <a class="nav-item" href="/customer/billing/profile">
            <i class="bi bi-person"></i>
            <span>Profile</span>
        </a>
    </nav>
</body>
</html> 