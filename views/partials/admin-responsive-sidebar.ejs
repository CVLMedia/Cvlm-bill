<script>
document.addEventListener('DOMContentLoaded', function() {
    const sidebarToggle = document.getElementById('sidebarToggle');
    const sidebarClose = document.getElementById('sidebarClose');
    const sidebar = document.getElementById('adminSidebar');
    const overlay = document.getElementById('sidebarOverlay');
    const hamburger = document.getElementById('hamburgerBtn'); // Desktop hamburger if exists
    
    // Toggle sidebar on mobile hamburger click
    if (sidebarToggle) {
        sidebarToggle.addEventListener('click', function() {
            sidebar.classList.add('show');
            overlay.classList.add('show');
            document.body.style.overflow = 'hidden';
        });
    }
    
    // Desktop hamburger toggle functionality
    if (hamburger) {
        hamburger.addEventListener('click', function() {
            // For desktop: toggle collapsed state
            if (window.innerWidth >= 768) {
                const isCollapsed = sidebar.classList.contains('collapsed');
                const mainContent = document.querySelector('.main-content');
                
                if (isCollapsed) {
                    sidebar.classList.remove('collapsed');
                    if (mainContent) {
                        mainContent.classList.remove('sidebar-collapsed');
                        mainContent.classList.add('sidebar-expanded');
                    }
                    // Save state to localStorage
                    localStorage.setItem('sidebarCollapsed', 'false');
                } else {
                    sidebar.classList.add('collapsed');
                    if (mainContent) {
                        mainContent.classList.remove('sidebar-expanded');
                        mainContent.classList.add('sidebar-collapsed');
                    }
                    // Save state to localStorage
                    localStorage.setItem('sidebarCollapsed', 'true');
                }
            } else {
                // For mobile: use existing show/hide
                sidebar.classList.toggle('show');
                overlay.classList.toggle('show');
            }
        });
    }
    
    // Restore sidebar state from localStorage on page load (desktop only)
    if (window.innerWidth >= 768) {
        const sidebarState = localStorage.getItem('sidebarCollapsed');
        const mainContent = document.querySelector('.main-content');
        if (sidebarState === 'true') {
            sidebar.classList.add('collapsed');
            if (mainContent) {
                mainContent.classList.remove('sidebar-expanded');
                mainContent.classList.add('sidebar-collapsed');
            }
        } else {
            sidebar.classList.remove('collapsed');
            if (mainContent) {
                mainContent.classList.add('sidebar-expanded');
                mainContent.classList.remove('sidebar-collapsed');
            }
        }
    } else {
        // On mobile, ensure main content has no margin
        const mainContent = document.querySelector('.main-content');
        if (mainContent) {
            mainContent.classList.remove('sidebar-expanded', 'sidebar-collapsed');
        }
    }
    
    // Close sidebar functions
    function closeSidebar() {
        sidebar.classList.remove('show');
        overlay.classList.remove('show');
        document.body.style.overflow = '';
    }
    
    // Close sidebar on close button click
    if (sidebarClose) {
        sidebarClose.addEventListener('click', closeSidebar);
    }
    
    // Close sidebar on overlay click
    if (overlay) {
        overlay.addEventListener('click', closeSidebar);
    }
    
    // Close sidebar when clicking on nav links (mobile)
    const navLinks = sidebar.querySelectorAll('a:not(#restartMikrotikBtn)');
    navLinks.forEach(link => {
        link.addEventListener('click', function() {
            if (window.innerWidth < 768) {
                setTimeout(closeSidebar, 100);
            }
        });
    });
    
    // Handle window resize
    window.addEventListener('resize', function() {
        if (window.innerWidth >= 768) {
            closeSidebar();
        }
    });
    
    // Function to handle collapse toggle icons
    function setupCollapseToggle(collapseId) {
        var toggler = document.querySelector('[data-bs-target="#' + collapseId + '"]');
        var collapseEl = document.getElementById(collapseId);
        if (toggler && collapseEl && typeof bootstrap !== 'undefined') {
            var icon = toggler.querySelector('.toggle-arrow');
            collapseEl.addEventListener('show.bs.collapse', function () {
                if (icon) {
                    icon.classList.remove('bi-chevron-down');
                    icon.classList.add('bi-chevron-up');
                }
            });
            collapseEl.addEventListener('hide.bs.collapse', function () {
                if (icon) {
                    icon.classList.remove('bi-chevron-up');
                    icon.classList.add('bi-chevron-down');
                }
            });
        }
    }
    
    // Setup all collapse toggles
    setupCollapseToggle('pppConnectionCollapse');
    setupCollapseToggle('responsiveHotspotCollapse');
    setupCollapseToggle('agentCollapse');
    setupCollapseToggle('teknisiCollapse');
    setupCollapseToggle('toolsCollapse');
    setupCollapseToggle('settingCollapse');
    
    // Restart Mikrotik functionality (preserve existing functionality)
    const restartBtn = document.getElementById('restartMikrotikBtn');
    if (restartBtn) {
        restartBtn.addEventListener('click', function(e) {
            e.preventDefault();
            if (typeof showConfirmAlert !== 'undefined') {
                showConfirmAlert(
                    'Konfirmasi Restart',
                    'Apakah Anda yakin ingin restart Mikrotik?',
                    'Ya, Restart',
                    'Batal',
                    function() {
                        fetch('/admin/mikrotik/restart', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                showSuccessAlert('Berhasil!', 'Mikrotik berhasil direstart');
                            } else {
                                showErrorAlert('Gagal', 'Gagal restart Mikrotik: ' + data.message);
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            showErrorAlert('Error', 'Terjadi kesalahan saat restart Mikrotik');
                        });
                    }
                );
            } else {
                // Fallback jika SweetAlert belum dimuat
                if (confirm('Apakah Anda yakin ingin restart Mikrotik?')) {
                    fetch('/admin/mikrotik/restart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('Mikrotik berhasil direstart');
                        } else {
                            alert('Gagal restart Mikrotik: ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Terjadi kesalahan saat restart Mikrotik');
                    });
                }
            }
        });
    }
    
    const restartBillingBtn = document.getElementById('btnRestartBilling');
    const restartResultBox = document.getElementById('billingRestartResult');
    const serverTimeValue = document.getElementById('serverTimeValue');
    let serverTimeOffset = null;

    function showRestartResult(text, success = true) {
        if (!restartResultBox) return;
        restartResultBox.style.display = 'block';
        restartResultBox.style.color = success ? '#c8e6c9' : '#ffcdd2';
        restartResultBox.textContent = text;
    }

    function renderServerTime() {
        if (serverTimeOffset === null || !serverTimeValue) return;
        
        // Hitung waktu server saat ini dengan offset
        // serverTimeOffset adalah selisih antara waktu server UTC dengan waktu client UTC
        // Server timezone adalah WIB (UTC+7), jadi waktu server WIB = waktu server UTC + 7 jam
        const serverTimeUTCNow = Date.now() + serverTimeOffset;
        const wibOffset = 7 * 60 * 60 * 1000; // 7 jam dalam milliseconds (WIB = UTC+7)
        const serverTimeWIB = new Date(serverTimeUTCNow + wibOffset);
        
        // Format waktu WIB
        const day = String(serverTimeWIB.getUTCDate()).padStart(2, '0');
        const month = String(serverTimeWIB.getUTCMonth() + 1).padStart(2, '0');
        const year = serverTimeWIB.getUTCFullYear();
        const hour = String(serverTimeWIB.getUTCHours()).padStart(2, '0');
        const minute = String(serverTimeWIB.getUTCMinutes()).padStart(2, '0');
        const second = String(serverTimeWIB.getUTCSeconds()).padStart(2, '0');
        
        serverTimeValue.textContent = `${day}/${month}/${year} ${hour}:${minute}:${second} WIB`;
    }

    async function fetchServerInfo() {
        try {
            const fetchStartTime = Date.now(); // Waktu saat request dimulai
            const res = await fetch('/admin/billing/system/server-info');
            const fetchEndTime = Date.now(); // Waktu saat response diterima
            const fetchDuration = fetchEndTime - fetchStartTime; // Durasi fetch (untuk kompensasi latency)
            
            const data = await res.json();
            if (!data.success) {
                throw new Error(data.message || 'Gagal mengambil info server');
            }
            
            // Server mengirim waktu dalam UTC (serverTimeUnix)
            // Server timezone adalah WIB (UTC+7), jadi waktu server = UTC + 7 jam
            // Untuk mendapatkan waktu server saat ini, kita perlu:
            // 1. Ambil waktu server UTC saat ini
            // 2. Tambahkan 7 jam untuk WIB
            // 3. Hitung offset dengan waktu client
            if (data.serverTimeUnix) {
                // Waktu server UTC saat ini (dengan kompensasi latency)
                const serverTimeUTCNow = data.serverTimeUnix + (fetchDuration / 2);
                // Waktu client UTC saat ini
                const clientTimeUTCNow = fetchEndTime;
                // Offset = selisih waktu server UTC dengan client UTC
                serverTimeOffset = serverTimeUTCNow - clientTimeUTCNow;
                renderServerTime();
            } else if (data.serverTimeIso) {
                // Fallback ke ISO jika serverTimeUnix tidak ada
                const serverTimeUTC = new Date(data.serverTimeIso).getTime();
                const estimatedServerTimeNow = serverTimeUTC + (fetchDuration / 2);
                const clientTimeUTC = fetchEndTime;
                serverTimeOffset = estimatedServerTimeNow - clientTimeUTC;
                renderServerTime();
            }
        } catch (error) {
            // Fallback: gunakan waktu client dengan offset 0
            console.warn('Failed to fetch server time, using client time:', error);
            serverTimeOffset = 0;
            if (serverTimeValue) {
                // Tampilkan waktu client dalam format WIB
                renderServerTime();
            }
        }
    }

    if (restartBillingBtn) {
        async function performRestart() {
            try {
                restartBillingBtn.disabled = true;
                restartBillingBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Restarting...';
                showRestartResult('Memproses restart...', true);
                const res = await fetch('/admin/billing/system/restart', { method: 'POST', headers: { 'Content-Type': 'application/json' } });
                const data = await res.json();
                if (!data.success) {
                    showRestartResult('Restart gagal: ' + (data.message || 'Unknown error') + '\n' + (data.error || ''), false);
                } else {
                    showRestartResult('Restart berhasil dijalankan.', true);
                    await fetchServerInfo();
                }
            } catch (error) {
                showRestartResult('Restart error: ' + error.message, false);
            } finally {
                restartBillingBtn.disabled = false;
                restartBillingBtn.innerHTML = '<i class="bi bi-arrow-repeat"></i> Restart Billing System';
            }
        }
        
        restartBillingBtn.addEventListener('click', async () => {
            if (typeof showConfirmAlert !== 'undefined') {
                showConfirmAlert(
                    'Konfirmasi Restart',
                    'Restart layanan billing sekarang?',
                    'Ya, Restart',
                    'Batal',
                    function() {
                        performRestart();
                    }
                );
            } else {
                // Fallback jika SweetAlert belum dimuat
                if (confirm('Restart layanan billing sekarang?')) {
                    performRestart();
                }
            }
        });
    }

    fetchServerInfo();
    setInterval(renderServerTime, 1000);
    // Auto refresh logo functionality (preserve existing functionality)
    function refreshLogo() {
        const logo = document.getElementById('logoImage');
        if (logo) {
            const timestamp = new Date().getTime();
            const src = logo.src.split('?')[0];
            logo.src = `${src}?v=${timestamp}`;
        }
    }
    
    // Refresh logo every 5 seconds (if needed)
    if (document.getElementById('logoImage')) {
        setInterval(refreshLogo, 5000);
    }
});
</script>